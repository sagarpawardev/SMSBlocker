<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_thread__msg"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/selector_thread"
    android:padding="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/card">

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardElevation="@dimen/elevation_thread__msg"
            app:cardCornerRadius="4dp"
            app:cardUseCompatPadding="true"
            android:id="@+id/cardView">
            <!--<View
                android:layout_width="20dp"
                android:layout_height="50dp"
                android:elevation="10dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                andridd:idid@+id/arrow_speak"
                android:background="@drawable/img_speak_left"/>-->


            <TextView
                android:id="@+id/tv_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/msg_body_left"
                android:textColor="@color/black"
                android:paddingStart="@dimen/msg_body_paddingstart"
                android:paddingEnd="@dimen/msg_body_paddingstart"
                android:paddingTop="@dimen/msg_body_paddingstart"
                android:paddingBottom="@dimen/msg_body_paddingstart"
                android:layout_alignParentBottom="true"
                android:maxWidth="250dp"
                android:autoLink="all"
                android:layout_gravity="center"
                android:textIsSelectable="true"
                android:alpha="0.76"
                android:text="shlslhs;s;s/sn/slsnl/san;sn/lslsnvlsnvlns;nnnsvns" />

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/cardView"
            android:elevation="1dp"
            android:padding="4dp"
            android:text="1646646463466"
            android:textSize="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_bodycover"
            android:layout_alignParentEnd="true"
            android:id="@+id/tv_sending"
            android:visibility="gone"
            android:text="Sending..."/>

    </RelativeLayout>



</LinearLayout>